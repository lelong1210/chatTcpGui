					javax.swing.UIManager.setLookAndFeel(info.getClassName());
					break;
				}
			}
			if (isLogin) {
				
				

			} else {
				
				view.setVisible(false);
				PublicEvent.getInstance().addEventLogin(new EventLogin() {

					@Override
					public void register(String username, String password, String rePassword) {

						if(!username.isBlank() && !password.isEmpty() && !rePassword.isEmpty()) {
							JOptionPane.showMessageDialog(loginView.getFrame(),"Register Success","Alert",JOptionPane.DEFAULT_OPTION); 
							loginView.paintLogin();
						}else {
							JOptionPane.showMessageDialog(loginView.getFrame(),"Please enter full information","Alert",JOptionPane.WARNING_MESSAGE); 
						}
												     
					}

					@Override
					public void login(String username, String password) {
						// TODO Auto-generated method stub
						if(!username.isEmpty() && !password.isEmpty()) {
							System.out.println("Login with: " + username + " <---> " + password);
						}else {
							JOptionPane.showMessageDialog(loginView.getFrame(),"Please enter full information","Alert",JOptionPane.WARNING_MESSAGE); 
						}
						
					}
				});
			}

		} catch (Exception ex) {

		}
	}

