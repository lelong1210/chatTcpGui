package client;

import guiCore.*;

public class Controller {
	private TCPClient tpcClient;
	private Item_People item_People;

	public Controller(ClientGuiView view) {
		try {
			for (javax.swing.UIManager.LookAndFeelInfo info : javax.swing.UIManager.getInstalledLookAndFeels()) {
				if ("Nimbus".equals(info.getName())) {
					javax.swing.UIManager.setLookAndFeel(info.getClassName());
					break;
				}
			}
		} catch (Exception ex) {

		}

		view.getHome().getChat().getChatBody().addItemLeft("123", "22h");

		Thread thread = new Thread() {
			@Override
			public void run() {
				int i=0;
				while(true) {
					item_People = new Item_People(""+i++);
					view.getHome().getMenu_Left().updateListChat(item_People);
				}
				Thread.sleep(1000);

			}

		};

	}
}
